@model Inventory_and_Asset_Management_2._0.Models.ItemModel
@using Inventory_and_Asset_Management_2._0.Models;
@{
    ViewBag.Title = "ItemInformation";
}



@{
    if (Session["userType"] != null && Session["userType"].ToString().Equals("2"))
    {
        Layout = "~/Views/Shared/_TechnicianMainLayout.cshtml";
        <!DOCTYPE html>
        <html lang="en">
        <head>
            <title>IT Equipment Management System</title>
            <meta charset="utf-8">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">

            <link rel="stylesheet" href="~/Content/bootstrap/css/bootstrap.min.css">
            <link rel="stylesheet" href="~/Content/bootstrap/css/bootstrap-theme.css">
            <link rel="stylesheet" href="~/Content/jquery-ui/jquery-ui.css">
            <link rel="stylesheet" href="~/Content/css/mycss.css">

            <script type="text/javascript" src="~/Content/js/jquery-2.1.1.min.js"></script>
            <script type="text/javascript" src="~/Content/js/responsiveslides.min.js"></script>
            <script type="text/javascript" src="~/Content/js/jquery.dataTables.min.js"></script>
            <script type="text/javascript" src="~/Content/js/dataTables.bootstrap.js"></script>
            <!--[if lt IE 9]>
            <script type="text/javascript" src="js/html5.js"></script>
            <link rel="stylesheet" href="css/ie.css" type="text/css" media="screen">
            <![endif]-->
        </head>
        <body>

            <div class="wrapper">
                <div class="content">
                    <!-- ///////////////////////////////////////////////////////////////////////////////////////// -->

                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-12">

                                <div class="panel panel-warning">
                                    <div class="panel-heading">
                                        <h4>IT equipment Information</h4>
                                    </div>
                                    <div class="panel-body">

                                        <div class="form-horizontal">

                                            <div class="form-group">
                                                <label class="control-label col-sm-3" align="right">Item Band:</label>
                                                <div class="col-sm-9">
                                                    <p class="form-control-static">@Model.item_brand</p>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-sm-3" align="right">Item Name:</label>
                                                <div class="col-sm-9">
                                                    <p class="form-control-static">@Model.item_name</p>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-sm-3" align="right">Item Description:</label>
                                                <div class="col-sm-9">
                                                    <p class="form-control-static">@Model.item_description</p>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-sm-3" align="right">Item Start Date:</label>
                                                <div class="col-sm-9">
                                                    <p class="form-control-static">@Model.item_startDate.ToString()</p>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-sm-3" align="right">Item End Date:</label>
                                                <div class="col-sm-9">
                                                    <p class="form-control-static">@Model.item_endDate.ToString()</p>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-sm-3" align="right">Item Status:</label>
                                                <div class="col-sm-9">
                                                    @{
                                                        if (@Model.item_status == 1)
                                                        {
                                                            <p class="form-control-static">Good</p>
                                                        }
                                                        else if (@Model.item_status == 2)
                                                        {
                                                            <p class="form-control-static">Normal</p>
                                                        }
                                                        else
                                                        {
                                                            <p class="form-control-static">Broken</p>
                                                        }
                                                    }

                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-sm-3" align="right">CMU Number:</label>
                                                <div class="col-sm-9">
                                                    <p class="form-control-static">@Model.item_cmuNumber</p>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-sm-3" align="right">CAMT Number:</label>
                                                <div class="col-sm-9">
                                                    <p class="form-control-static">@Model.item_camtNumber</p>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-sm-3" align="right">Serial Number:</label>
                                                <div class="col-sm-9">
                                                    <p class="form-control-static">@Model.item_serialNumber</p>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-sm-3" align="right">Item Picture:</label>
                                                <div class="col-sm-9">
                                                    <p class="form-control-static"><img src="@Url.Content("~/Content/ItemPics/" + @Model.item_picture)" class="img-responsive" width="200" /></p>
                                                </div>
                                            </div>

                                        </div>

                                    </div>
                                </div>

                            </div><!-- COL-MD-12 -->
                        </div><!-- ROW -->
                    </div><!-- CONTAINER -->
                    <!-- ///////////////////////////////////////////////////////////////////////////////////////// -->
                </div><!-- CONTENT -->
                <div class="push"></div>
            </div> <!-- WRAPPER -->
        </body>
    </html>

    <script type="text/javascript" src="~/Content/jquery-ui/jquery-ui.js"></script>
    <script type="text/javascript" src="~/Content/bootstrap/js/bootstrap.min.js"></script>

    }
    else
    {
        <script>
            alert("Please login by Technician");
        </script>
        @Html.Action("Index", "Home");
    }
}